{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": ["env.d.ts", "web/**/*", "web/**/*.vue"],
    "exclude": ["web/**/__tests__/*"],

    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": ["./web/*"],
            "@components/*": ["./web/components/*"],
            "@composables/*": ["./web/composables/*"]
        }
    }
}
