[
    { "time": "00:18.91", "text": "カムパネルラ", "translation": "康帕內拉" },
    {
        "time": "00:20.77",
        "text": "夢を見ていた",
        "translation": "我做了一個夢"
    },
    { "time": "00:22.69", "text": "君のあとに", "translation": "夢見你身後" },
    {
        "time": "00:24.54",
        "text": "咲いたリンドウの花",
        "translation": "龍膽花綻放"
    },
    { "time": "00:26.45", "text": "この街は", "translation": "這座城市" },
    { "time": "00:28.24", "text": "変わり続ける", "translation": "持續地改變" },
    { "time": "00:30.08", "text": "計らずも", "translation": "卻出乎意料的" },
    { "time": "00:32.11", "text": "君を残して", "translation": "將你留下" },
    {
        "time": "00:34.10",
        "text": "真昼の海で|眠る月光蟲",
        "pace": [1.5, 1.4],
        "translation": "正午大海裡沉睡的月光蟲"
    },
    {
        "time": "00:37.60",
        "text": "戻らない|あの日に|想いを巡らす",
        "pace": [1.5, 1.6, 1.4],
        "translation": "遙想那些回不去的時光"
    },
    {
        "time": "00:41.38",
        "text": "オルガンの音色で|踊るスタチュー",
        "pace": [1.4, 1.4],
        "translation": "管風琴聲中起舞的雕像"
    },
    {
        "time": "00:44.95",
        "text": "時間だけ|通り|過ぎていく",
        "pace": [3.0, 1.6, 1.5],
        "translation": "只有時間悠悠走過"
    },
    {
        "time": "00:48.77",
        "text": "あの人の言う通り",
        "translation": "如那人所說"
    },
    { "time": "00:51.62", "text": "わたしの手は", "translation": "我的手" },
    {
        "time": "00:53.50",
        "text": "汚れてゆく|のでしょう",
        "pace": [1.4, 1.15],
        "translation": "會逐漸沾染髒污吧"
    },
    {
        "time": "00:56.21",
        "text": "追い風に|翻り",
        "pace": [1.5, 1.3],
        "translation": "順風飄揚"
    },
    { "time": "00:59.17", "text": "わたしはまだ", "translation": "我會" },
    {
        "time": "01:00.84",
        "text": "生きてゆくでしょう",
        "translation": "繼續活下去的吧"
    },
    {
        "time": "01:03.62",
        "text": "終わる日まで",
        "translation": "希望直到最後"
    },
    {
        "time": "01:05.42",
        "text": "寄り添うように",
        "translation": "都像你就依偎在我身旁那樣"
    },
    {
        "time": "01:07.30",
        "text": "君を憶えていたい",
        "translation": "將你永遠牢記"
    },
    { "time": "01:11.30", "type": "interlude", "pace": [1.2] },
    { "time": "01:18.47", "text": "カムパネルラ", "translation": "康帕內拉" },
    {
        "time": "01:20.30",
        "text": "そこは豊かか",
        "translation": "那裡是否豐沃到"
    },
    { "time": "01:22.23", "text": "君の目が", "translation": "讓你感到" },
    { "time": "01:24.15", "text": "眩むくらいに", "translation": "目眩神迷" },
    {
        "time": "01:26.00",
        "text": "タールの上で",
        "pace": [1.95],
        "translation": "柏油路上"
    },
    {
        "time": "01:27.84",
        "text": "陽炎が揺れる",
        "pace": [1.7],
        "translation": "熱氣朦朧"
    },
    {
        "time": "01:29.65",
        "text": "爆ぜる|ような",
        "pace": [1.9, 1.85],
        "translation": "行將迸裂的"
    },
    { "time": "01:31.56", "text": "夏の灯火", "translation": "夏日燈火" },
    {
        "time": "01:33.50",
        "text": "真白な鳥と歌う針葉樹",
        "pace": [1.2],
        "translation": "純白的鳥兒和歌唱的針葉樹"
    },
    {
        "time": "01:37.00",
        "text": "見つめる全てが面影になる",
        "pace": [1.4],
        "translation": "所見一切全化為昔日樣貌"
    },
    {
        "time": "01:41.00",
        "text": "波打ち際に|ボタンが一つ",
        "pace": [1.1, 1.2],
        "translation": "浪打岸上時那枚鈕扣"
    },
    {
        "time": "01:44.59",
        "text": "君がくれた寂しさよ",
        "translation": "是你留給我的寂寞呀"
    },
    {
        "time": "01:48.25",
        "text": "あの人の言う通り",
        "translation": "如那人所說"
    },
    {
        "time": "01:51.23",
        "text": "いつになれど",
        "translation": "有些傷無論過多久"
    },
    {
        "time": "01:53.23",
        "text": "癒えない傷が|あるでしょう",
        "pace": [1.2, 1.3],
        "translation": "都不會痊癒吧"
    },
    {
        "time": "01:55.77",
        "text": "黄昏を振り返り",
        "translation": "每當回望暮色時"
    },
    {
        "time": "01:58.75",
        "text": "その度 |過ちを知るでしょう",
        "pace": [1.55, 1.3],
        "translation": "便會明白自己犯的錯吧"
    },
    { "time": "02:03.10", "text": "君がいない", "translation": "少了你的" },
    { "time": "02:05.05", "text": "日々は続く", "translation": "日子會繼續" },
    {
        "time": "02:06.70",
        "text": "しじまの中独り",
        "pace": [2.0],
        "translation": "獨留我在　萬籟俱寂"
    },
    { "time": "02:11.10", "type": "interlude", "pace": [1.1] },
    {
        "time": "02:25.15",
        "text": "光を|受け止めて",
        "pace": [1.2, 1.15],
        "translation": "接收光線後"
    },
    {
        "time": "02:28.41",
        "text": "跳ね返り|輝くクリスタル",
        "pace": [1.3, 1.1],
        "translation": "反射光亮的水晶"
    },
    {
        "time": "02:32.31",
        "text": "君がつ|けた傷も",
        "pace": [1.3, 1.2],
        "translation": "你留給我的傷"
    },
    {
        "time": "02:35.94",
        "text": "輝きのその一つ",
        "translation": "也是其中一道光芒"
